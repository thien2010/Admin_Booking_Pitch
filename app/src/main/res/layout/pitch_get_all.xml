<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/style_background"
        android:padding="@dimen/margin_10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/img_ctSan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_150dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_date"
                android:text="Ngày"
                android:layout_marginRight="@dimen/with_50dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_hour"
                android:text="Giờ"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="@dimen/text_size_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/margin_5dp"
                android:src="@drawable/ic_baseline_phone_24"
                android:layout_width="@dimen/margin_20dp"
                android:layout_height="@dimen/margin_20dp"/>
            <TextView
                android:id="@+id/tv_userID"
                android:text="User name"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="@dimen/text_size_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_pitchName"
                    android:text="Sân Số 3"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <CheckBox
            android:id="@+id/tshirt_comfim"
            android:text="Áo đấu"
            android:enabled="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16dp"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_30dp"/>
        <CheckBox
            android:id="@+id/umpire_confim"
            android:text="Trọng tài"
            android:enabled="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16dp"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_30dp"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Nước: "
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="@dimen/text_size_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_water"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="@dimen/text_size_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_totalPrice"
                android:text="200.000"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_huy"
                android:backgroundTint="@color/sub_color"
                android:layout_marginHorizontal="@dimen/margin_10dp"
                android:text="Hủy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_xacNhan"
                android:layout_marginHorizontal="@dimen/margin_10dp"
                android:text="Xác Nhận"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>