<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.admin_thongke.ThongKeNam">
    <LinearLayout
        android:paddingBottom="@dimen/with_100dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Năm: "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edt_year"
                android:inputType="number"
                android:layout_marginRight="20dp"
                android:layout_width="@dimen/with_100dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_tk_year"
                android:text="Xem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_year"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="@dimen/margin_20dp"
                android:padding="@dimen/padding_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Tổng thu: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tong_year"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/padding_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Số trận đã đá: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16dp"
                    android:textStyle="bold"
                    android:layout_width="@dimen/with_200dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/so_luong_san_y"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/padding_5dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Chi phí:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:padding="@dimen/margin_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Bảo dưỡng, vệ sinh, điện: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16dp"
                        android:textStyle="normal"
                        android:layout_width="@dimen/with_200dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/dv_vs_dien_y"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16dp"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="@dimen/margin_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Trọng tài: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16dp"
                        android:textStyle="normal"
                        android:layout_width="@dimen/with_200dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/trong_tai_y"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16dp"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="@dimen/margin_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Nước: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16dp"
                        android:textStyle="normal"
                        android:layout_width="@dimen/with_200dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/sl_nuoc_y"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16dp"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="@dimen/margin_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Tổng: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16dp"
                        android:textStyle="normal"
                        android:layout_width="@dimen/with_200dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/chi_phi_y"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16dp"
                        android:textStyle="normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/padding_5dp"
                android:layout_marginBottom="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Lợi nhuận: "
                    android:textColor="#C50023"
                    android:textSize="@dimen/text_size_16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/dt_nam"
                    android:textColor="#C50023"
                    android:textSize="@dimen/text_size_16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart_nam1"
                android:layout_marginBottom="@dimen/margin_40dp"
                android:layout_width="match_parent"
                android:layout_height="500dp"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart_nam2"
                android:layout_marginBottom="@dimen/margin_40dp"
                android:layout_width="match_parent"
                android:layout_height="500dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>