<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/margin_10dp"
    android:layout_marginBottom="@dimen/margin_10dp"
    android:background="@drawable/style_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/user_name2"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_16dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/user_quantityCancel"
        android:textStyle="normal"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:textSize="@dimen/text_size_16dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/user_quantityWating"
        android:textStyle="normal"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:textSize="@dimen/text_size_16dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/user_quantityKeeping"
        android:textStyle="normal"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:textSize="@dimen/text_size_16dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/user_quantityDone"
        android:textStyle="normal"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:textSize="@dimen/text_size_16dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>