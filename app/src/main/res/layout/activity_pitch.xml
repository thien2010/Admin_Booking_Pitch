<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_10dp"
    android:paddingRight="@dimen/margin_10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.PitchActivity">
    <LinearLayout
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/style_background"
            android:id="@+id/btn_update"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_width="@dimen/margin_40dp"
            android:layout_height="@dimen/margin_40dp"/>
        <ImageView
            android:background="@drawable/style_background"
            android:src="@drawable/ic_baseline_delete_24"
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/margin_40dp"
            android:layout_height="@dimen/margin_40dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_pitch"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_150dp"/>
    <TextView
        android:id="@+id/name_pitch"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="Sân"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/price_water"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="Giá nước"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/price_pitch"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="Giá Sân"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="Thông tin chi tiết sân"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/info_pitch"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_10dp"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <Button
        android:id="@+id/btn_back"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_gravity="center"
        android:text="Trở về"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>