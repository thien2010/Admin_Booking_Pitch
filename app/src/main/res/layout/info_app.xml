<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="@dimen/with_50dp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/logo_png"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_width="@dimen/with_50dp"
            android:layout_height="@dimen/height_50dp"/>
        <TextView
            android:text="Admin Booking Pitch"
            android:textSize="@dimen/text_size_20dp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="@dimen/with_300dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Phiên bản: "
            android:textSize="@dimen/text_size_16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="@dimen/height_150dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="right"
            android:text="1.0.0"
            android:textSize="@dimen/text_size_16dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_width="@dimen/height_150dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/height_50dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_gravity="center"
        android:layout_width="@dimen/with_300dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Ngày cập nhật: "
            android:textSize="@dimen/text_size_16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="@dimen/height_150dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="right"
            android:text="23/8/2021"
            android:textSize="@dimen/text_size_16dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_width="@dimen/height_150dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>