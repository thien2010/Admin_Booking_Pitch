<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/height_50dp"
    android:layout_marginTop="@dimen/height_50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_weight="6"
        android:background="@drawable/all_busy"
        android:padding="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:background="@drawable/all_busy"
            android:text="Tên sân"
            android:textSize="@dimen/text_size_11dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:background="@drawable/all_busy"
            android:text="Ca 1"
            android:textSize="@dimen/text_size_11dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="@drawable/all_busy"
            android:gravity="center"
            android:text="Ca 2"
            android:textSize="@dimen/text_size_11dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="@drawable/all_busy"
            android:gravity="center"
            android:text="Ca 3"
            android:textSize="@dimen/text_size_11dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="@drawable/all_busy"
            android:gravity="center"
            android:text="Ca 4"
            android:textSize="@dimen/text_size_11dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="@drawable/all_busy"
            android:gravity="center"
            android:textSize="@dimen/text_size_11dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Ca 5"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            android:id="@+id/rcv_spanbusy1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

</LinearLayout>