<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_margin="@dimen/margin_5dp"
        android:gravity="center"
        android:text="Các ngày đã đặt:"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/all_date"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_margin="@dimen/margin_5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Ngày đá xong: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14dp"
            android:layout_width="@dimen/with_100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_dateDone"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_11dp"
            android:layout_width="@dimen/with_200dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/date_picker_cancel"
            android:src="@drawable/ic_baseline_date_range_24"
            android:layout_width="@dimen/margin_30dp"
            android:layout_height="@dimen/margin_30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="@dimen/margin_5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Ngày cần hủy: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14dp"
            android:layout_width="@dimen/with_100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_dateCancel"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_11dp"
            android:layout_width="@dimen/with_200dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/date_picker_cancel2"
            android:src="@drawable/ic_baseline_date_range_24"
            android:layout_width="@dimen/margin_30dp"
            android:layout_height="@dimen/margin_30dp"/>
    </LinearLayout>
    <TextView
        android:layout_margin="@dimen/margin_5dp"
        android:gravity="center"
        android:text="Lưu ý: chọn 1 trong 2 ngày trên để có thể hủy sân"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="@dimen/margin_5dp"
            android:text="chọn lại"
            android:backgroundTint="@color/primary_color"
            android:layout_gravity="center"
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_margin="@dimen/margin_5dp"
            android:text="hủy"
            android:backgroundTint="@color/color6"
            android:layout_gravity="center"
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>